    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row justify-content-md-center">
        <div class="col-md-8 col-md-offset-2">
          <%= f.email_field :email, autofocus: true, class: 'form-control-g', placeholder: 'EMail', maxlength: '65535' %>
        </div>
      </div>

      <div class="row justify-content-md-center">
        <div class="col-md-8 col-md-offset-2">
          <%= f.password_field :password, autocomplete: "off", class: 'form-control-g', placeholder: 'パスワード', maxlength: '65535' %>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="row justify-content-md-center">
          <div class="col-md-8 col-md-offset-2">
            <label class="custom-control custom-checkbox">
              <%= f.check_box :remember_me, class: 'custom-control-input' %>
              <span class="custom-control-indicator"></span>
              <span class="custom-control-description">パスワードを記憶する</span>
            </label>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "パスワードを忘れた方はこちら", new_password_path(resource_name), class: 'pull-right' %><br />
            <% end -%>
          </div>
        </div>
      <% end -%>

      <div class="row justify-content-md-center">
        <div class="col-md-8 col-md-offset-2 text-right">
          <%= f.submit "ログイン", class: 'button-blue-g px-5' %>
        </div>
      </div>

      <div class="row justify-content-md-center">
        <div class="col-md-8 col-md-offset-2 text-center">
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
              <%= link_to "新規アカウント作成", new_registration_path(resource_name), class: 'button-blue-g d-inline-block w-100' %><br />
          <% end -%>
        </div>
      </div>
    <% end %>

  </div>
</div>
<%= render 'footer' %>
