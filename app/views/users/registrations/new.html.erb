<script>
  $(function(){
    var eventId = new Object;
    var params = []
    var pair=location.search.substring(1).split('&');
    for(var i=0;pair[i];i++) {
      params = pair[i].split('=');
    }
    if(params.length == 2){
      eventId = params[1]
      $('#event-id').val(eventId);
    }
  })
</script>
<div class="container">
  <div id="user-registration">
    <div class="row justify-content-md-center text-center icon-box">
      <div class="col-md-8 col-md-offset-2">
        <span class="icon-cube facebook"><i class="fa fa-facebook fa-3x" aria-hidden="true"></i></span>
        <span class="icon-cube twitter"><i class="fa fa-twitter fa-3x" aria-hidden="true"></i></span>
        <span class="icon-cube google"><i class="fa fa-google-plus fa-3x" aria-hidden="true"></i></span>
      </div>
    </div>
    <div class="row justify-content-md-center">
      <div class="col-md-4 col-md-offset-4 separate">
        <div class="or">or</div>
      </div>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="row justify-content-md-center">
          <div class="col-md-8 col-md-offset-2">
            <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: 'ユーザーネーム', maxlength: '255' %>
            <p>※ユーザー名はご友人に認識されやすい名前を推奨します</p>
          </div>
        </div>

        <div class="row justify-content-md-center">
          <div class="col-md-8 col-md-offset-2">
            <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'EMail', maxlength: '65535' %>
          </div>
        </div>

        <div class="row justify-content-md-center">
          <div class="col-md-8 col-md-offset-2">
            <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'パスワード', maxlength: '65535' %>
            <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> 文字以上の英数字)</em>
            <% end %><br />
          </div>
        </div>

        <div class="row justify-content-md-center">
          <div class="col-md-8 col-md-offset-2">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: '確認用パスワード', maxlength: '65535' %>
          </div>
        </div>

        <div class="row justify-content-md-center">
          <div class="col-md-8 col-md-offset-2 text-right">
            <input type="hidden" name="event_id" id="event-id"/>
            <%= f.submit "新規アカウント作成", class: 'button-blue-g px-5' %>
          </div>
        </div>
    <% end %>
    <!--<%= render "users/shared/links" %>-->
  </div>
</div>