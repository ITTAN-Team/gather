<%= form_for(event) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <label>イベントイメージ</label>
    <%= f.file_field :image %>
    <label>タイトル</label>
    <%= f.text_field :name, :placeholder => 'タイトル' %>
    <label>開催日</label>
    <%= f.date_field :event_date %>
    <label>場所</label>
    <%= f.text_field :address, :placeholder => '場所' %>
    <label>会場URL</label>
    <%= f.text_field :location_url, :placeholder => '会場URL' %>
    <label>定員</label>
    <%= f.number_field :capacity, :min => '1', :placeholder => '定員' %>
    <label>説明</label>
    <%= f.text_field :description, :placeholder => '説明' %>
    <label>関連リンク</label>
    <%= f.text_field :link, :placeholder => '関連リンク' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
