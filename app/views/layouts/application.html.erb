<!DOCTYPE html>
<html>
  <head>
    <title>Together</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <script>
      $(function(){
        $('.navbar-toggler').on('click', function() {
          if($('#navbarsExampleDefault' + '.show').length == 0){
            $('#navbarsExampleDefault').addClass('show');
            $('.navbar-toggler').attr('aria-expanded', true);
          }else{
            $('#navbarsExampleDefault').removeClass('show');
            $('.navbar-toggler').attr('aria-expanded', false);
          }
        })
      });
    </script>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top navbar-right">
      <a class="navbar-brand" href="/events">Gather</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <% if user_signed_in? %>
            <ul class="navbar-nav mr-auto header-menus">
              <li class="nav-item"><%= link_to('プロフィールを修正', '/users/edit', class: 'nav-link')%></li>
              <li class="nav-item"><%= link_to('イベントを作成', '/events/new', class: 'nav-link')%></li>
              <li class="nav-item"><%= link_to('ログアウト', '/users/sign_out', class: 'nav-link')%></li>
            </ul>
        <% else %>
            <ul class="navbar-nav mr-auto header-menus">
              <li class="nav-item"><%= link_to('新規登録', '/users/sign_up', class: 'nav-link')%></li>
              <li class="nav-item"><%= link_to('ログイン', '/users/sign_in', class: 'nav-link')%></li>
            </ul>
        <% end %>
      </div>
    </nav>
    <%= yield %>
  </body>

  <footer>
    <div class="container">
      <h1 class="footter-title">Gather</h1>
      <a href="#" class="scrollpoint sp-effect3 active animated fadeInDown">
        <img src="" alt="" class="logo">
      </a>
      <div class="social">
        <a href="#" class="scrollpoint sp-effect3 active animated fadeInDown">
          <%= fa_icon 'twitter' %>
        </a>
        <a href="#" class="scrollpoint sp-effect3 active animated fadeInDown">
          <%= fa_icon 'instagram' %>
        </a>
        <a href="#" class="scrollpoint sp-effect3 active animated fadeInDown">
          <%= fa_icon 'facebook' %>
        </a>
      </div>
      <div class="rights">
        <p>Copyright © 2017</p>
        <p><a href="http://www.ittan.website" target="_blank">ITTAN.inc</a></p>
      </div>
      <div class="links row">
        <!--TODO リンク先決めねば-->
        <div class="col-xs-12 col-md-3 text-center">
          <a>お問い合わせ</a>
        </div>
        <div class="col-xs-12 col-md-3 text-center">
          <a>運営会社</a>
        </div>
        <div class="col-xs-12 col-md-3 text-center">
          <a>利用規約</a>
        </div>
        <div class="col-xs-12 col-md-3 text-center">
          <a>プライバシーポリシー</a>
        </div>
      </div>
    </div>
  </footer>

</html>
